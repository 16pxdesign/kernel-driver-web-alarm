<style>
    .box{background:#1aa85c}


    @-o-keyframes fadeIt {
        0%   { background-color: #db2c29; }
        50%  { background-color: #db2c29; }
        100% { background-color: #1aa85c; }
    }
    @keyframes fadeIt {
        0%   { background-color: #db2c29; }
        50%  { background-color: #db2c29; }
        100% { background-color: #1aa85c; }
    }

    .backgroundAnimated{
        background-image:none !important;
        -o-animation: fadeIt 5s ease-in-out;
        animation: fadeIt 5s ease-in-out;
    }

</style>

<div class="container">
    <div class="row ">
        <div class="col">
            <h1 class="mt-4" id="deviceid"><%= devid %></h1>
