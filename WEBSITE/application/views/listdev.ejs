        <div class="col ">
            <a href="/user/logout" class="btn btn-secondary">Logout</a>
        </div>
    </div>
    <br>
    <div class="row">
        <p class="lead mb-3">Actions</p>
    </div>
    <div class="row actions">
        <div class="box m-4 text-white  mb-3 " id="ARM"  ><div class="card-header">ARM</div><p class="time">-</p><p class="state">-</p>  </div>
        <div class="box m-4 text-white  mb-3 " id="ALARM"  ><div class="card-header">ALARM</div><p class="time">-</p> <p class="state">-</p> </div>
        <div class="box m-4 text-white  mb-3 " id="BUTTON"  ><div class="card-header">BUTTON</div><p class="time">-</p> </div>
        <div class="box m-4 text-white  mb-3 " id="PIR"  ><div class="card-header">PIR</div><p class="time">-</p> </div>
        <div class="box m-4 text-white  mb-3 " id="RESISTOR"  ><div class="card-header">LDR</div><p class="time">-</p> </div>
        <div class="box m-4 text-white  mb-3 " id="DOOR"  ><div class="card-header">DOOR</div><p class="time">-</p> </div>
    </div>
